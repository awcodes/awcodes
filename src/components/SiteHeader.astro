---
import { Site } from "@/config.ts";
import Logo from "@/components/Logo.astro";
import Icon from "@/components/Icon.astro";
---

<header class="border-b-4 border-primary-500 deep-shadow py-3">
  <div class="container flex items-center justify-between">
    <div class="flex items-center space-x-3">
      <Logo classes="h-8 text-primary-500" />
      <h1 class="font-display text-3xl -mt-1.5">awcodes</h1>
    </div>
    <nav class="flex justify-center" aria-label="primary">
      <ul class="flex items-center space-x-3">
        <li>
          <a href={Site.social.github} class="text-gray-500 hover:text-primary-500 focus:text-primary-500 w-5 h-5 leading-none block">
            <Icon name="github" />
            <span class="sr-only">Github</span>
          </a>
        </li>
        <li>
          <a href={Site.social.twitter} class="text-gray-500 hover:text-primary-500 focus:text-primary-500 w-5 h-5 leading-none block">
            <Icon name="twitter" />
            <span class="sr-only">Twitter</span>
          </a>
        </li>
        <li>
          <a href={Site.social.linkedin} class="text-gray-500 hover:text-primary-500 focus:text-primary-500 w-5 h-5 leading-none block">
            <Icon name="linkedin" />
            <span class="sr-only">Linked In</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>
