---
import { Site, PrimaryNavigation } from "@/config.ts";
import Logo from "@/components/Logo.astro";
import Icon from "@/components/Icon.astro";

const pathName = Astro.request.url.pathname;
---

<header class="py-3 border-b-4 border-primary-500 deep-shadow">
  <div class="container flex items-center justify-between">
    <div class="flex items-center space-x-3">
      <Logo classes="h-6 md:h-8 text-primary-500" />
      <h1 class="font-display text-xl md:text-3xl -mt-1.5">awcodes</h1>
    </div>
    <nav class="flex justify-center" aria-label="primary">
      <ul class="flex items-center space-x-3">
        {PrimaryNavigation.map((item) => (
          <li>
            <a
              href={`/${item.link}`}
              aria-current={`${pathName == item.link ? "page" : "false"}`}
              class={`text-gray-800 font-normal no-underline py-2 px-5 block hover:bg-tertiary-500 focus:bg-tertiary-500 hover:text-gray-800 focus:text-gray-800 hover:no-underline focus:no-underline ${pathName == item.link ? "bg-tertiary-500" : ""}`}
            >
              {item.label}
            </a>
          </li>
        ))}
        <li>
          <a href={Site.social.github} class="block w-5 h-5 leading-none text-gray-500 hover:text-primary-500 focus:text-primary-500">
            <Icon name="github" />
            <span class="sr-only">Github</span>
          </a>
        </li>
        <li>
          <a href={Site.social.twitter} class="block w-5 h-5 leading-none text-gray-500 hover:text-primary-500 focus:text-primary-500">
            <Icon name="twitter" />
            <span class="sr-only">Twitter</span>
          </a>
        </li>
        <li>
          <a href={Site.social.linkedin} class="block w-5 h-5 leading-none text-gray-500 hover:text-primary-500 focus:text-primary-500">
            <Icon name="linkedin" />
            <span class="sr-only">Linked In</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>
